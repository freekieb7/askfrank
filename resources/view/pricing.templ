package view

import (
	"askfrank/internal/middleware"
	"askfrank/resources/view/component"

	"github.com/gofiber/fiber/v2"
)

// PricingPage renders the pricing tiers for AskFrank healthcare IT platform
templ PricingPage(c *fiber.Ctx) {
	@component.Layout("Pricing - AskFrank", c) {
		<div class="bg-[#EAF2EF] min-h-screen">
			// Hero Section
			<section class="bg-white py-12 px-3 sm:px-6 lg:px-12">
				<div class="max-w-5xl mx-auto text-center">
					<h1 class="text-4xl font-bold text-[#05668D] mb-4">{ middleware.T(c, "pricing.hero.title") }</h1>
					<p class="text-lg text-[#028090] mb-8 max-w-3xl mx-auto">{ middleware.T(c, "pricing.hero.subtitle") }</p>
				</div>
			</section>
			// Main Pricing Tiers
			<section class="py-12 px-3 sm:px-6 lg:px-12">
				<div class="max-w-6xl mx-auto">
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
						// Free Tier
						<div class="bg-white rounded-lg shadow-lg p-6 flex flex-col relative">
							<div class="mb-4">
								<h3 class="text-xl font-semibold text-[#05668D] mb-2">{ middleware.T(c, "pricing.free.title") }</h3>
								<p class="text-sm text-[#028090] mb-4">{ middleware.T(c, "pricing.free.subtitle") }</p>
								<div class="text-3xl font-bold text-[#00A896] mb-2">{ middleware.T(c, "pricing.free.price") }</div>
								<p class="text-sm text-[#028090]">{ middleware.T(c, "pricing.free.included") }</p>
							</div>
							<div class="mb-6">
								<h4 class="font-semibold text-[#05668D] mb-3">{ middleware.T(c, "pricing.features.title") }</h4>
								<ul class="space-y-2 text-sm text-[#028090]">
									<li class="flex items-start">
										<span class="text-[#02C39A] mr-2">✓</span>
										<span>{ middleware.T(c, "pricing.free.feature1") }</span>
									</li>
									<li class="flex items-start">
										<span class="text-[#02C39A] mr-2">✓</span>
										<span>{ middleware.T(c, "pricing.free.feature2") }</span>
									</li>
									<li class="flex items-start">
										<span class="text-[#02C39A] mr-2">✓</span>
										<span>{ middleware.T(c, "pricing.free.feature3") }</span>
									</li>
								</ul>
							</div>
							<a href="/signup" class="mt-auto inline-block bg-[#02C39A] text-white font-semibold py-3 px-6 rounded-lg hover:bg-[#028090] transition text-center">{ middleware.T(c, "pricing.free.cta") }</a>
						</div>
						// Starter Tier
						<div class="bg-white rounded-lg shadow-lg p-6 flex flex-col relative">
							<div class="mb-4">
								<h3 class="text-xl font-semibold text-[#05668D] mb-2">{ middleware.T(c, "pricing.starter.title") }</h3>
								<p class="text-sm text-[#028090] mb-4">{ middleware.T(c, "pricing.starter.subtitle") }</p>
								<div class="text-3xl font-bold text-[#00A896] mb-2">{ middleware.T(c, "pricing.starter.price") }</div>
								<p class="text-sm text-[#028090]">{ middleware.T(c, "pricing.starter.included") }</p>
							</div>
							<div class="mb-6">
								<h4 class="font-semibold text-[#05668D] mb-3">{ middleware.T(c, "pricing.features.title") }</h4>
								<ul class="space-y-2 text-sm text-[#028090]">
									<li class="flex items-start">
										<span class="text-[#02C39A] mr-2">✓</span>
